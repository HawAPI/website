---
import Header from '@components/layouts/Header.astro';
import Footer from './Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Configurations -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="content-language" content="en-US" />
    <meta http-equiv="content-type" content="text/html" />

    <!-- Default  -->
    <meta name="copyright" content="TODO" />
    <meta name="description" content="TODO" />
    <meta name="author" content="TODO" />
    <meta name="tags" content="TODO" />
    <meta name="keywords" content="TODO" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="TODO" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content="TODO" />
    <meta name="twitter:site" content="TODO" />
    <meta name="twitter:domain" content={Astro.url} />
    <meta name="twitter:title" content="TODO" />
    <meta
      name="twitter:description"
      property="og:description"
      itemprop="description"
      content="TODO"
    />
    <meta
      property="twitter:image"
      itemprop="image primaryImageOfPage"
      content="TODO"
    />

    <!-- Open Graph -->
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content="TODO" />
    <meta property="og:site_name" content="TODO" />
    <meta property="og:description" content="TODO" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="TODO" />

    <!-- Links -->
    <link rel="canonical" href={Astro.url} />

    <!-- Icons -->
    <link rel="apple-touch-icon" href="TODO" type="image/png" />
    <link rel="shortcut icon" type="image/png" href="TODO" />
    <link rel="icon" type="image/png" href="TODO" />

    <!-- Astro -->
    <meta name="generator" content={Astro.generator} />

    <!-- Title -->
    <title>{title + ' | HawAPI'}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <style>
      :root {
        --primary-color: rgb(15, 15, 15);

        --primary-text-color: #fff;
        --secondary-text-color: rgb(211, 0, 0);

        --sw-primary-text-effect: -0.05rem -0.05rem 1px #ed2b12,
          0.05rem -0.05rem 1px #ed2b12, -0.05rem 0.05rem 1px #ed2b12,
          0.05rem 0.05rem 1px #ed2b12, 0 0 15px #630100, 0 0 20px #450100;
        --sw-secondary-text-effect: rgba(0, 0, 0, 0.8);
      }

      :global(*) {
        text-decoration: none;
        /* font-family: Poppins, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"; */
      }

      :global(a, h1, h2, h3, h4) {
        margin: 0;
        padding: 0;
      }

      :global(html) {
        margin: 0;
        padding: 0;
        font-family: system-ui, sans-serif;
        color: var(--primary-text-color);
        background-color: var(--primary-color);
      }

      :global(body) {
        height: 100vh;
        width: 100%;
        margin: 0;
        overflow: hidden;
      }

      :global(main) {
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      :global(a) {
        text-decoration: none;
        color: var(--secondary-text-color);
        transition: all 0.3s;
      }

      :global(a:hover) {
        color: var(--primary-text-color);
      }

      :global(.sw-effect-title) {
        font-size: 8em;
        font-family: Benguiat;
        color: var(--sw-secondary-text-effect);
        text-shadow: var(--sw-primary-text-effect);
      }
    </style>
  </body>
</html>
