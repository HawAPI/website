---
import Link from '@components/core/Link.astro';
---

<footer>
  <Link
    href="/docs/about/#maintainers"
    name="Maintainers"
    title="See all maintainers of the HawAPI project"
    isLocal
  />
  <Link
    href="/docs/about/#tech-stack"
    name="Tech Stack"
    title="See the tools of the HawAPI project"
    isLocal
  />
  <Link
    href="/docs/about/#fair-use-policy"
    name="Fair Use Policy"
    title="See the fair use policy of the project"
    isLocal
  />
  <Link
    href="/docs/about/#copyright"
    name="Copyright"
    title="See the copyright status of the project"
    isLocal
  />
  <Link
    href="/docs/about/#licenses"
    name="Licenses"
    title="See the project licenses"
    isLocal
  />
</footer>

<style>
  footer {
    height: 3.5rem;
    width: 100%;
    position: fixed;
    font-size: 0.875rem;
    display: flex;
    flex-wrap: wrap;
    align-items: flex-end;
    justify-content: center;
    text-align: center;
    bottom: 0;
    gap: 1.5rem;
    margin: 0 1.5rem 1rem 1.5rem;
  }

  @media (max-width: 488px) {
    footer {
      margin-bottom: 1.5rem;
    }
  }
</style>
